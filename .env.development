# .env.development
# Development environment variables for Backend
# Copy to .env and fill in the values for local development

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
API_PREFIX=api
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://mieszkaniownik:your-password@localhost:5432/mieszkaniownik?schema=public
# For GKE deployment, this will be overridden by Kubernetes secrets

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# For GKE deployment, this will be overridden by Kubernetes secrets

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-dev.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-dev
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://mieszkaniownik.wsparcie.dev,https://api.mieszkaniownik.wsparcie.dev

# Scraper Configuration
SCRAPER_ENABLED=true
SCRAPER_INTERVAL_HOURS=6
SCRAPER_BATCH_SIZE=100
SCRAPER_CONCURRENT_REQUESTS=5
SCRAPER_TIMEOUT_MS=30000
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Puppeteer Configuration (for web scraping)
PUPPETEER_HEADLESS=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
CHROME_BIN=/usr/bin/chromium-browser

# Notification Configuration
NOTIFICATIONS_ENABLED=true
NOTIFICATION_BATCH_SIZE=50
EMAIL_SERVICE_ENABLED=false
PUSH_NOTIFICATIONS_ENABLED=false

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_ANALYTICS=false
ENABLE_METRICS=true

# External Services
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
# SENTRY_ENVIRONMENT=development
