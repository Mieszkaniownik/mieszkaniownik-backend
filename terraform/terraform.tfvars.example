# Example Terraform variables file
# Copy this file to terraform.tfvars and fill in the values

project_id   = "your-gcp-project-id"
project_name = "mieszkaniownik-backend"
region       = "europe-west3"
environment  = "production"

# GKE Configuration
gke_machine_type = "e2-standard-4"
gke_node_count   = 1
gke_min_nodes    = 1
gke_max_nodes    = 5

# Database Configuration
db_tier      = "db-custom-2-7680"
db_disk_size = 100
db_name      = "mieszkaniownik"
db_user      = "mieszkaniownik"
db_password  = "your-secure-password-here"

# Redis Configuration
redis_memory_gb = 5

# GitHub Configuration
github_owner = "Mieszkaniownik"
github_repo  = "mieszkaniownik-backend"

# Domain
domain = "mieszkaniownik.wsparcie.dev"
