# .env.production
# Production environment variables for Backend
# DO NOT commit actual secrets! Use Kubernetes secrets instead.
# This file serves as a template for required environment variables.

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000
API_PREFIX=api
API_VERSION=v1

# Database Configuration (override with Kubernetes secrets)
DATABASE_URL=postgresql://mieszkaniownik:REPLACE_WITH_SECRET@postgres-host:5432/mieszkaniownik?schema=public

# Redis Configuration (override with Kubernetes secrets)
REDIS_HOST=redis-host
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_SECRET

# JWT Configuration (override with Kubernetes secrets)
JWT_SECRET=REPLACE_WITH_SECRET
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# Google OAuth Configuration (override with Kubernetes secrets)
GOOGLE_CLIENT_ID=REPLACE_WITH_SECRET.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=REPLACE_WITH_SECRET
GOOGLE_CALLBACK_URL=https://api.mieszkaniownik.wsparcie.dev/api/v1/auth/google/callback

# CORS Configuration
ALLOWED_ORIGINS=https://mieszkaniownik.wsparcie.dev,https://api.mieszkaniownik.wsparcie.dev,https://app.mieszkaniownik.wsparcie.dev

# Scraper Configuration
SCRAPER_ENABLED=true
SCRAPER_INTERVAL_HOURS=6
SCRAPER_BATCH_SIZE=100
SCRAPER_CONCURRENT_REQUESTS=3
SCRAPER_TIMEOUT_MS=45000
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Puppeteer Configuration (for web scraping)
PUPPETEER_HEADLESS=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
CHROME_BIN=/usr/bin/chromium-browser

# Notification Configuration
NOTIFICATIONS_ENABLED=true
NOTIFICATION_BATCH_SIZE=50
EMAIL_SERVICE_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=60

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_ANALYTICS=true
ENABLE_METRICS=true

# External Services (override with Kubernetes secrets)
# SENTRY_DSN=REPLACE_WITH_SECRET
# SENTRY_ENVIRONMENT=production

# Email Configuration (if applicable)
# EMAIL_FROM=noreply@mieszkaniownik.wsparcie.dev
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=REPLACE_WITH_SECRET
